<Window
    x:Class="RackManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RackManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:RackManager.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <!--<DataTemplate DataType="{x:Type}">
                <views:AnimalsView />
            </DataTemplate>-->
        </Grid.Resources>
        <views:NavigationView Grid.Column="0" Loaded="NavigationView_Loaded" />
        <ContentPresenter Grid.Column="1" Content="{Binding CurrentView}" />
    </Grid>
</Window>
